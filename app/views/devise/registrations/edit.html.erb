
<div class='container'>
  <div class="row">
    <div class="col-md-6">
      <div class="well bs-component">
        <form class="form-horizontal" action='<%= registration_path(resource_name) %>' method='put'>
          <fieldset>
            <legend>Personal Info</legend>
            <%= devise_error_messages! %>
            <div class="form-group is-empty">
              <label for="email" class="col-md-2 control-label">Email</label>
              <div class="col-md-10">
                <input type="email" class="form-control" id="email" placeholder="Email" name='email'>
              </div>  
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="form-group is-empty">
              <label for="password" class="col-md-2 control-label">Password</label>
              <div class="col-md-10">
                <input type="password" class="form-control" id="password" placeholder="Password" name='password'>
              </div>  
            </div>
            <div class="form-group is-empty">
              <label for="password_confirmation" class="col-md-2 control-label">Password Confirmation</label>
              <div class="col-md-10">
                <input type="password" class="form-control" id="password_confirmation" placeholder="Confirm your password" name='password_confirmation'>
              </div>  
            </div>

            <div class="form-group">
              <div class="col-md-10 col-md-offset-2">
                <button type="button" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </div>
          </fieldset>
        </form>
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      </div>
    </div>
  </div>
</div>


