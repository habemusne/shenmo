var backgroundImageClasses = [
  'first-background-image-1',
  'first-background-image-2',
  'first-background-image-3',
  'first-background-image-4',
  'first-background-image-5',
];
var i = 1;
var b = $('.first-background');

function nextBackground(){
  // $('.first-background')[0].setAttribute('background-image', backgroundImages[i])
  
  b.removeClass();
  b.addClass('bg__s');
  b.addClass('first-background');
  b.addClass(backgroundImageClasses[i]);
  i = (i + 1) % backgroundImageClasses.length;
  setTimeout(nextBackground, 3000);
}

