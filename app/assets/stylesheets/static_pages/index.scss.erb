[class*="bg__"] {
  height: 50vh;

  text-indent: -9999px;

  /* fix background */
  background-attachment: fixed;

  /* center it */
  background-position: center center;

  /* Scale it nicely to the element */
  background-size: cover;

}

.abacus-background{
  min-height: 600px;
  background-image: linear-gradient(
      $primaryColorHue1Transparent1,
      $primaryColorHue1Transparent2
    ), url(https://s3-us-west-2.amazonaws.com/shenmo/background/20131210105609883.jpg);
  background-size: cover;
  background-repeat: no-repeat;
  opacity: 0.7;
}

