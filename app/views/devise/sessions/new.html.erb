<div class='container'>
  <div class='panel panel-default'>
    <div class="panel-heading">Log In <p>New User? <a href='<%= new_user_registration_path %>'>Sign Up Here</a></p></div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <fieldset>
          <%= devise_error_messages! %>

          <div class='form-group is-empty'>
            <label for='user_email' class='col-md-2 control-label'>Email</label>
            <div class='col-md-10'>
              <input type='email' class='form-control' id='user_email' placeholder='Email' name='user[email]' autofocus='autofocus' />
            </div>
          </div>

          <div class='form-group is-empty'>
            <label for='user_password' class='col-md-2 control-label'>Password</label>
            <div class='col-md-10'>
              <input type='password' class='form-control' id='user_password' placeholder='Password' name='user[password]' autocomplete='off' />
            </div>
          </div>

          <button type='submit' class='btn btn-primary'>Submit
            <div class='ripple-container'></div>
          </button>
        </fieldset>
      <% end %>

    </div>
  </div>

</div>

